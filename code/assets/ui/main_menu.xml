<Widget
    name="main_menu"
    >
    <Graphic
        name="scrollBackground"
        animationSet="main_menu_scroll_bg.anim"
        drawMode="tile"
        size="1280,800"
        layer="-1"
        />
    <Widget
        name="loginScreen"
        position="400,100"
        size="480,640"
        >
        <Graphic
            name="background"
            animationSet="main_menu_bg.anim"
            layer="-1"
            />
        <Include
            name="usernameLabel"
            template="TestLabel"
            text="Username:"
            position="40,220"
            />
        <Include
            name="usernameField"
            template="TestTextField"
            position="40,280"
            />
        <Include
            name="passwordLabel"
            template="TestLabel"
            text="Password:"
            position="40,380"
            />
        <Include
            name="passwordField"
            template="TestTextField"
            position="40,440"
            />
        <Include
            name="loginButton"
            template="TestButton"
            position="40,540"
            text="Log In"
            />
    </Widget>
</Widget>