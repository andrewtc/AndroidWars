<Widget
    name="main_menu"
    sprite="main_menu_bg.anim"
    position="400,100"
    size="480,640"
    color="#FFFFFFFF"
    >
    <Label
        name="usernameLabel"
        text="Username:"
        font="main_menu.fnt"
        margins="40,220,0,0"
        textColor="#FF000000"
        />
    <Button
        name="usernameField"
        text="andrewtc"
        font="main_menu.fnt"
        margins="40,0,0,0"
        style="mainMenuTextFieldStyle"
        onClickEvent=""
        layout_below="usernameLabel"
        color="#FFFFFFFF"
        />
    <Label
        name="passwordLabel"
        text="Password:"
        font="main_menu.fnt"
        margins="40,10,0,0"
        layout_below="usernameField"
        textColor="#FF000000"
        />
    <Button
        name="passwordField"
        text="test"
        font="main_menu.fnt"
        margins="40,0,0,0"
        style="mainMenuTextFieldStyle"
        onClickEvent=""
        layout_below="passwordLabel"
        color="#FFFFFFFF"
        />
    <Button
        name="loginButton"
        text="Log In"
        font="main_menu.fnt"
        margins="40,20,0,0"
        style="mainMenuButtonStyle"
        onClickEvent="OnLogInButtonPressed"
        layout_below="passwordField"
        color="#FFFFFFFF"
        />
</Widget>