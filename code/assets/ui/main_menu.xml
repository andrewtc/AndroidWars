<Widget
    name="main_menu"
    >
    
    <!-- Background -->
    <Graphic
        name="scrollBackground"
        animationSet="main_menu_scroll_bg.anim"
        drawMode="tile"
        drawOffset="128,128"
        size="1280,800"
        layer="-1"
        />
        
    <!-- Login Screen -->
    <Include name="loginScreen" template="Login" isVisible="false" />
    
    <!-- Dashboard Screen -->
    <Include name="dashboardScreen" template="Dashboard" isVisible="false" />
    
</Widget>